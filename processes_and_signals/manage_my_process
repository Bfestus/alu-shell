#!/usr/bin/env bash
# This script manages the manage_my_process script.
# It can start, stop, or restart the process and maintains a PID file.

SCRIPT_PID_FILE="/var/run/my_process.pid"
SCRIPT="/path/to/manage_my_process"

case "$1" in
  start)
    if [ -f "$SCRIPT_PID_FILE" ]; then
      echo "manage_my_process is already running. PID file found: $(cat "$SCRIPT_PID_FILE")"
      exit 1
    fi
    echo "Starting manage_my_process"
    nohup bash -c "while true; do echo 'I am alive!' >> /tmp/my_process; sleep 2; done" >/dev/null 2>&1 &
    echo $! > "$SCRIPT_PID_FILE"
    echo "manage_my_process started"
    ;;
  stop)
    if [ ! -f "$SCRIPT_PID_FILE" ]; then
      echo "manage_my_process is not running. PID file not found."
      exit 1
    fi
    echo "Stopping manage_my_process"
    PID=$(cat "$SCRIPT_PID_FILE")
    kill "$PID"
    rm "$SCRIPT_PID_FILE"
    echo "manage_my_process stopped"
    ;;
  restart)
    $0 stop
    sleep 2
    $0 start
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac

